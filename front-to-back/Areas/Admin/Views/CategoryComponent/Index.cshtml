@using front_to_back.Areas.Admin.ViewModels.CategoryComponent
@model CategoryComponentIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Contact Intro</h4>
                        <a class="btn btn-outline-dark" asp-action="create" asp-controller="categorycomponent" asp-area="admin">Create Contact Intro</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Category</th>
                                        <th>Description</th>
                                        <th>Photo</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contact in Model.CategoryComponents)
                                    {

                                        <tr>
                                            <td>@contact.Id</td>
                                            <td>@contact.Title</td>
                                            <td>@contact.Category.Title</td>
                                            <td>@Html.Raw(contact.Description)</td>

                                            <td> <img src="~/assets/img/@contact.FilePath"></td>

                                            <td>
                                                <a class="btn btn-primary " asp-action="update" asp-controller="categorycomponent" asp-area="admin" asp-route-id=@contact.Id>Update</a>
                                                <br>
                                                <br>
                                                <a class="btn btn-primary btn-danger" onclick="confirm('Delete entry?')" asp-action="delete" asp-controller="categorycomponent" asp-area="admin" asp-route-id=@contact.Id>Delete</a>
                                                
                                                <br>
                                                <br>
                                                <a class="btn btn-primary btn-details " asp-action="details" asp-controller="categorycomponent" asp-area="admin" asp-route-id=@contact.Id>Details</a>
                                            </td>
                                        </tr>

                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>